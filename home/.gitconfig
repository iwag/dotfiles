[user]
	name = iwag
	email = "iwagame@gmail.com"
[core]
	excludesfile = /Users/iwag/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.5.2/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[color]
	ui = true
[alias]
	ca = commit -a
	wip = commit -a -m "wipwip"
	ammend = commit --amend
	cm = commit
	co = checkout
	l = log --graph -n 20 --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %ar%Creset'
	logs = log -p --graph --decorate --pretty=format:\"%ad [%cn] <%h> %n %Cgreen%d%Creset %s %n\" --stat
	logss = log --graph --decorate --pretty=format:\"%ad [%cn] <%h> %n %Cgreen%d%Creset %s %n\" --stat
	st = status -sb
	pl = pull --rebase --prune
	sup = submodule update
	ignore = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >> .gitignore
	b = branch -a
	upi = update-index --assume-unchanged
	rv = checkout HEAD --
	g = grep -niI
	difff = diff --stat
	patience = diff --patience
	resethard = reset --hard
[branch]
	autosetuprebase = always
[push]
	default = current
[core]
	excludesfile = ~/.gitignore
	pager = less -r
	editor = vim
[grep]
	lineNumber = true

[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less

[ghq]
	root = /Users/iwag/Devel/src

[url "git@github.com:"]
	insteadOf = git://github.com/
	insteadOf = https://github.com/
	insteadOf = http://github.com/
	pushinsteadof = git://github.com/
	pushinsteadOf = https://github.com/
